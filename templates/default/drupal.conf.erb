<VirtualHost *:80>
  ServerName <%= @node[:webapp][:domain] %>
  DocumentRoot <%= @node[:drupal][:dir] %>

  <Directory <%= @node[:drupal][:dir] %>>
    Options FollowSymLinks
    Require all granted
    AllowOverride All
  </Directory>

  ErrorLog <%= @node[:apache][:log_dir] %>/<%= @node[:webapp][:domain] %>-error.log
  CustomLog <%= @node[:apache][:log_dir] %>/<%= @node[:webapp][:domain] %>-access.log combined

  <IfModule mod_rewrite.c>
    RewriteEngine On
  </IfModule>
</VirtualHost>
