<VirtualHost *:<%= @node[:drupal][:apache][:port] %>>
  ServerName <%= @node[:drupal][:site][:host] %>
  DocumentRoot <%= @node[:drupal][:dir] %>

  <Directory <%= @node[:drupal][:dir] %>>
    Options FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>

  ErrorLog <%= @node[:apache][:log_dir] %>/<%= @node[:drupal][:site][:host] %>-error.log
  CustomLog <%= @node[:apache][:log_dir] %>/<%= @node[:drupal][:site][:host] %>-access.log combined

  <IfModule mod_rewrite.c>
    RewriteEngine On
  </IfModule>
</VirtualHost>
